{
  "name": "react-pantry-chef",
  "version": "0.1.0",
  "main": "./server/server.js",
  "engines": {
    "node": "10.3.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.0.0-rc.0",
    "axios": "^0.18.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-mongo": "^2.0.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-session": "^1.15.6",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.4",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "nodemon": "^1.18.7"
  },
  "scripts": {
    "api": "nodemon --ignore ./client/ ./server/server.js",
    "client": "cd client && npm run start",
    "build": "cd client && npm run build",
    "install": "npm install && cd client && npm install",
    "seed": "node scripts/seedDB.js",
    "start:all": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "concurrently nodemon \"nodemon --ignore ./client/\" \"npm run client\"",
    "start:prod": "node ./server/server.js",
    "heroku-postbuild": "npm run build"
  }
}
